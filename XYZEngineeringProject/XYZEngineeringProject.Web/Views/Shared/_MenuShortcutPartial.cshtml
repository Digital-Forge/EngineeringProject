@page
@model XYZEngineeringProject.Web.Views.Shared._MenuShortcutPartialModel
@using Microsoft.AspNetCore.Identity
@using XYZEngineeringProject.Domain.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

 <a class="nav-link menu-item" asp-area="" asp-controller="Home" asp-action="Index">

    @if (SignInManager.IsSignedIn(User))
    {
        <img class="user-image" src="~/img/default-user-picture.png" onmouseover="showUserMenu()" onmouseout="hideUserMenu()"/>

        <div id="user-menu invisible">
            User menu
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </div>
    }
    else
    {
         <img class="logo" src="~/img/logoXYZ.png" onmouseover="ShowLoginPartial()"/>     
        
             <partial name="_LoginPartial"/>
       
    }
</a>  
